{
  "extends": "airbnb",

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "rules": {
    "no-mixed-operators": [
      "error",
      {
        "allowSamePrecedence": true
      }
    ],
    "no-plusplus": "off",
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreStrings": true
      }
    ],
    "camelcase": "off",
    "new-cap": "off",
    "no-var": "off",
    "vars-on-top": "off",
    "operator-linebreak": "off",
    "no-multi-str": "off",
    "prefer-template": "off",
    "dot-notation": "off"
  }
}
